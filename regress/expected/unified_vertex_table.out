--
-- Test 6: Label with SET operations
--
SELECT * FROM cypher('unified_test', $$
    MATCH (p:Person {name: 'Alice'})
    SET p.age = 30
    RETURN p.name, p.age, label(p)
$$) AS (name agtype, age agtype, label agtype);
  name   | age |  label   
---------+-----+----------
 "Alice" | 30  | "Person"
(1 row)

-- Verify label is preserved after SET
SELECT * FROM cypher('unified_test', $$
    MATCH (p:Person {name: 'Alice'})
    RETURN label(p)
$$) AS (label agtype);
  label   
----------
 "Person"
(1 row)

